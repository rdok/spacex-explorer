function docker-compose-app() {
    docker-compose \
      --project-directory `pwd` \
      --file docker/docker-compose.yml \
      $@
}

function php() {
    docker-compose \
      --project-directory `pwd` \
      --file docker/docker-compose.yml \
      exec --user `id -u`:`id -g` \
      php php $@
}

function mysql() {
    docker-compose \
      --project-directory `pwd` \
      --file docker/docker-compose.yml \
      exec --user `id -u`:`id -g` \
      db mysql $@
}
